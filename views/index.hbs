<div class="container">
  <div class="row">
    <div class="col s12 center">
      <h1>Auth</h1>
    </div>
    <form class="col s12 center" method="POST">
      <div class="col s4"></div>
      <div class="mobile input-field col s4">
        <input id="icon_telephone" type="tel" class="validate"  value="+7" required>
        <label for="icon_telephone">Your mobile</label>
        <a id="send-sms" class="waves-effect wave btn">Send SMS</a>
      </div>
      <div class="sms input-field col s4">
        <input id="icon_telephone" type="tel" class="validate" placeholder="1234" required>
        <label for="icon_telephone">Your sms code</label>
        <a id="confirm-sms" class="waves-effect wave btn">Confirm SMS</a>
      </div>
      <div class="col s4"></div>
    </form>
  </div>
</div>

<script src="/js/auth/appAuth.js"></script>