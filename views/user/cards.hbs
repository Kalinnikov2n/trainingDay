<div class="container">

 <div class="row">
         <div class="col s12">
      <h3 class="center">База знаний</h3>
    </div>
     {{#each base}}
    <div class="col s4">
      <div class="card">
        <div class="card-image">
          <img width="100px" src="https://cs2.livemaster.ru/storage/ad/2b/e1fcbc273c22fc32e5f394a5870c--materialy-dlya-tvorchestva-100-procent-hlopok-polsha-2-melkij.jpg">
          <span class="card-title">{{this.title}}</span>
        </div>
        <div class="card-content">
          <p>Должность: {{this.position}}</p>
        </div>
                <div class="card-action">
          <a href="#">Подробнее</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

</div>
